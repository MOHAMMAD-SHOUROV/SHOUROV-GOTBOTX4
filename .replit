[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GoatBot Server"

[[workflows.workflow]]
name = "GoatBot Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
