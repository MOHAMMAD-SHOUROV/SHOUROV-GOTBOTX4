language = "nodejs"
run = "npm start"
entrypoint = "index.js"
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"
packages = ["libuuid", "pkg-config", "cairo", "pango", "libjpeg", "giflib", "librsvg", "pixman"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
